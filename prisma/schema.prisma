// Model User
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi ke Alarm
  alarms    Alarm[]
}

// Model Alarm
model Alarm {
  id        String   @id @default(uuid())
  time      String   // Format "HH:mm" contoh: "07:30"
  label     String   // Nama alarm, contoh: "Bangun Pagi"
  days      String   // JSON string: "[true,false,true,...]"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign Key ke User
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}