// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Ganti ke "postgresql" atau "mysql" jika perlu
  url      = env("DATABASE_URL")
}

// Model User
model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  username     String
  token        String?       // Token login (UUID/JWT)
  alarms       Alarm[]
  transactions Transaction[]
  @@map("users")
}

model Alarm {
  id       Int     @id @default(autoincrement())
  time     String  // Format: "HH:mm" (contoh: "07:30")
  label    String  // Label alarm (contoh: "Bangun Pagi")
  days     Json    // Array boolean untuk hari [Minggu, Senin, ..., Sabtu]
  isActive Boolean @default(true)
  userId   Int
  user     User    @relation(fields: [userId], references: [id])

  @@map("alarms")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  type      String   // INCOME / EXPENSE
  amount    Float
  category  String
  date      DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@map("transactions")
}