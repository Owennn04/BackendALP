// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // Ganti ke "postgresql" atau "mysql" jika perlu
  url      = env("DATABASE_URL")
}

// Model User
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi ke Alarm
  alarms    Alarm[]
}

model Alarm {
  id       Int     @id @default(autoincrement())
  time     String  // Format: "HH:mm" (contoh: "07:30")
  label    String  // Label alarm (contoh: "Bangun Pagi")
  days     Json    // Array boolean untuk hari [Minggu, Senin, ..., Sabtu]
  isActive Boolean @default(true)
  userId   Int
  user     User    @relation(fields: [userId], references: [id])

  @@map("alarms")
}